<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsCorlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.SettingsActivity">

        <include
            layout="@layout/appbar_layout"
            android:id="@+id/settings_toolbar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/settings_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:src="@drawable/profile_pic"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/colorPrimary"/>

        <EditText
            android:id="@+id/profile_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:background="@drawable/inputs"
            android:textAlignment="center"
            android:hint="Your name here..."
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorMainTextBlack"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/profile_status_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name_editText"
            android:background="@drawable/inputs"
            android:textAlignment="center"
            android:hint="Your status here..."
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorMainTextBlack"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/update_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_status_editText"
            android:background="@drawable/buttons"
            android:text="Update"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorMainTextWhite"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:padding="16dp"/>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>