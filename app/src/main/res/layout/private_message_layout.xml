<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile_pic"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/receiver_profile_pic"
        android:background="@drawable/private_message_bubble"
        android:text="Receiver message here..."
        android:padding="12dp"
        android:textSize="15sp"
        android:textColor="@color/colorMainTextBlack"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:background="@drawable/private_message_bubble"
        android:text="Sender message here..."
        android:textSize="15sp"
        android:padding="12dp"
        android:textColor="@color/colorMainTextBlack"/>

</RelativeLayout>